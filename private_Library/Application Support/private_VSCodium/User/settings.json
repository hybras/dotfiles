{
    "window.zoomLevel": 1, // I am blind
    "task.allowAutomaticTasks": "on",
    // Theming
    "window.autoDetectColorScheme": true,
    "workbench.preferredDarkColorTheme": "Pitch Black",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "workbench.tree.indent": 12,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
    },
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "[GitHub Light Default]": {
            // "editorInlayHint.background": "#dfdeded0",
            "editorInlayHint.background": "#ffffff",
            "editorInlayHint.foreground": "#000000d0"
        },
        "[Pitch Black]": {
            "editorInlayHint.background": "#000000",
            "editorInlayHint.foreground": "#00ccff83"
        }
    },
    "zenMode.fullScreen": false,
    // major ui elements
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "workbench.activityBar.location": "top",
    "zenMode.showTabs": "none",
    // Editor
    "editor.cursorStyle": "block",
    "editor.fontSize": 18,
    "editor.fontFamily": "CaskaydiaCove Nerd Font Mono",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.wordWrap": "bounded",
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "editor.linkedEditing": true,
    "editor.accessibilitySupport": "off",
    "editor.stickyScroll.enabled": true,
    // Terminal
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.EXE",
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "terminal.external.osxExec": "Warp.app",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.watcherExclude": {
        // Default rules
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        // Added rules
        "/target/**": true // rust / cargo projects build output
    },
    "files.associations": {
        "*.rmd": "markdown"
    },
    // git
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.allowForcePush": true,
    "git.closeDiffOnOperation": true,
    "git.enableCommitSigning": true,
    "git.useEditorAsCommitInput": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.defaultDateShortFormat": "D MMM, YY",
    "gitlens.defaultDateFormat": null,
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "switch:command",
        "push:command"
    ],
    "gitlens.views.scm.grouped.views": {
        "commits": true,
        "branches": true,
        "remotes": true,
        "stashes": true,
        "tags": true,
        "worktrees": true,
        "contributors": true,
        "repositories": false,
        "searchAndCompare": false,
        "launchpad": true
    },
    "githubPullRequests.pullBranch": "never",
    "githubIssues.queries": [
        {
            "label": "My Issues",
            "query": "is:open assignee:${user} repo:${owner}/${repository}",
            "groupBy": [
                "milestone"
            ]
        },
        {
            "label": "Created Issues",
            "query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
        },
        {
            "label": "Recent Issues",
            "query": "state:open repo:${owner}/${repository} sort:updated-desc"
        }
    ],
    "cSpell.userWords": [
        "Imma",
        "asciicasts",
        "hackathon",
        "lockdown"
    ],
    // Language specific stuff
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
    "python.languageServer": "Jedi",
    "[c]": {
        // "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "cmake.configureOnOpen": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/Users/hybras/Library/Application Support/VSCodium/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/12.0.1/clangd_12.0.1/bin/clangd",
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.fontLigatures": false
    },
    "markdown.preview.fontSize": 16,
    "emojisense.markupCompletionsEnabled": false,
    "emojisense.languages": {
        "asciidoc": true,
        "markdown": true,
        "plaintext": {
            "markupCompletionsEnabled": false,
            "emojiDecoratorsEnabled": false
        },
        "scminput": true,
        "git-commit": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "npm.keybindingsChangedWarningShown": true,
    "html.format.indentInnerHtml": true,
    "todo-tree.regex.regex": "(--|//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "redhat.telemetry.enabled": false,
    "powershell.powerShellDefaultVersion": "Windows PowerShell (x86)",
    "vsicons.dontShowNewVersionMessage": true,
    "r.bracketedPaste": true,
    "r.rpath.windows": "C:\\Users\\varun\\scoop\\shims\\r.exe",
    "r.rterm.windows": "C:\\Users\\varun\\scoop\\apps\\python\\current\\Scripts\\radian.exe",
    "yaml.format.singleQuote": true,
    "yaml.format.enable": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "js",
    ],
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
    "rust-analyzer.hover.memoryLayout.enable": false,
    "[racket]": {
        "editor.rulers": [
            102
        ],
        "editor.wordSeparators": "()[]{}\",'`;#|",
        "editor.formatOnType": true,
        "editor.formatOnSave": true
    },
    "[asciidoc]": {
        "editor.wordWrap": "on",
        "editor.tabCompletion": "on",
        "editor.quickSuggestions": {},
        "editor.fontLigatures": false
    },
    "asciidoc.preview.preservePreviewWhenHidden": true,
    "asciidoc.antora.showEnableAntoraPrompt": false,
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "lldb.suppressUpdateNotifications": true,
    "notebook.consolidatedRunButton": true,
    "notebook.formatOnSave.enabled": true,
    "rubyLsp.rubyExecutablePath": "/opt/homebrew/opt/ruby/bin/ruby",
}